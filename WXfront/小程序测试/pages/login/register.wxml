<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">请完善个人信息</h2>
			<view class="weui-form__desc"></view>
		</view>
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				
				<view class="weui-cells weui-cells_form">
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd"><label class="weui-label">车牌号</label></view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="停放车辆车牌号" placeholder-class="weui-input__placeholder"  bindinput="carIdText"/>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">
                            <label class="weui-label">姓名</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写本人姓名" placeholder-class="weui-input__placeholder" bindinput="userNameText"/>
						</view>
					</view>
					<view class="weui-cell weui-cell_active">
						<view class="weui-cell__hd">
                            <label class="weui-label">联系电话</label>
                        </view>
						<view class="weui-cell__bd">
							<input class="weui-input" placeholder="填写绑定的电话号码" type="number" placeholder-class="weui-input__placeholder" bindinput="phoneNumText"/>
						</view>
					</view>
				</view>
			</view>
		</view>
		
		<view class="weui-form__opr-area">
			<a aria-role="button" class="weui-btn weui-btn_primary" bindtap="submit">确定</a>
		</view>
	
		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__links">
					
					<navigator url="javascript:" class="weui-footer__link" >多部车辆登记</navigator>
				</view>
				<view class="weui-footer__text">Copyright © **停车场</view>
			</view>
		</view>
	</view>
</view>
